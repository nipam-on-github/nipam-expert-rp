<p id="notice"><%= notice %></p>

<div class="container">

  <h1>Qualifications</h1>
  <div class="row">
    <div class="col-md-12">
      <table id="qualifications-table" class="display">

        <thead>
          <tr>
            <th>Qualification</th>
            <th>Institution</th>
            <th>NQF Level</th>
            <th>Start</th>
            <th>End</th>
            <th>Person</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @qualifications.each do |qualification| %>
            <tr>
              <td><%= qualification.qual_obtained %></td>
              <td><%= qualification.institution %></td>
              <td><%= qualification.nqf_level %></td>
              <td><%= qualification.date_from %></td>
              <td><%= qualification.date_to %></td>
              <td><%= qualification.person.full_name %></td>
              <td><%= link_to 'Show Person', person_path(@person) %></td>
              <td><%= link_to 'Edit Qualification', edit_person_qualification_path(@person, qualification) %></td>
              <td><%= link_to 'Remove Qualification', [@person, qualification], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
	
      </table>
    </div>
  </div>
  
  <br>

  <%= link_to 'New Qualification', new_person_qualification_path, class: 'btn btn-primary' %>

</div>
