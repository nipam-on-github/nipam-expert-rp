<%= form_with(model: @specialisation, url: all_specialisations_path, local: true) do |form| %>
  <% if @specialisation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@specialisation.errors.count, "error") %> prohibited this specialisation from being saved:</h2>

      <ul>
      <% @specialisation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Required fields are followed by <abbr title="Required">*</abbr></p>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :person_id %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.select :person_id, Person.all.collect { |person| [person.full_name, person.id] }, prompt: 'Select Person...' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label 'Area of specialisation' %><br />
      <%= form.select :area, @all_areas.collect { |area| [area, area] }, prompt: 'Select Area...' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label 'Field of specialisation' %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.select :field_id, Field.all.collect { |field| [field.field, field.id] }, prompt: 'Select Field...' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :level %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.select :level, @level_array.each { |level| [level,level]}, prompt: 'Select Level...'  %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :station_duty %><br />
      <%= form.select :station_duty, @namibian_cities.each { |city| [city,city]}, prompt: 'Select City/Town...'  %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label 'Can Develop Training Material' %> <br />
      <%= form.radio_button :can_develop_material, 'Yes' %> Yes<br />
      <%= form.radio_button :can_develop_material, 'No' %> No <br />
      <%= form.radio_button :can_develop_material, 'Not-Specified' %> Not-Specified <br />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label 'Explanation' %>
      <%= form.text_area :explanation, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="actions form-group col-md-12">
      <%= form.submit class: "btn btn-primary"%> <hr>
    </div>
  </div>
<% end %>
