<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Si no</th>
      <th>Assignment name</th>
      <th>Project name</th>
      <th>Owner sponsoring agency</th>
      <th>Cost of project</th>
      <th>Commencement date</th>
      <th>Completion date</th>
      <th>Satisfactorily completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.si_no %></td>
        <td><%= assignment.assignment_name %></td>
        <td><%= assignment.project_name %></td>
        <td><%= assignment.owner_sponsoring_agency %></td>
        <td><%= assignment.cost_of_project %></td>
        <td><%= assignment.commencement_date %></td>
        <td><%= assignment.completion_date %></td>
        <td><%= assignment.satisfactorily_completed %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

