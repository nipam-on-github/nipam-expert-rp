<p id="notice"><%= notice %></p>

<div class="container">

  <h1>References</h1>

  <div class="row">
    <div class="col-md-12">
      <table id="references-table" class="display">

        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Telephone</th>
            <th>Employer</th>
            <th>Person</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @references.each do |reference| %>
            <tr>
              <td><%= reference.full_name %></td>
              <td><%= reference.email %></td>
              <td><%= reference.mobile %></td>
              <td><%= reference.telephone %></td>
              <td><%= reference.employer %></td>
              <td><%= reference.person.full_name %></td>
              <td><%= link_to 'Show Person', person_path(@person) %></td>
              <td><%= link_to 'Edit', edit_person_reference_path(@person, reference) %></td>
              <td><%= link_to 'Destroy', [@person, reference], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
	
      </table>
    </div>
  </div>

  <br>
  
  <%= link_to 'New Reference', new_person_reference_path %>

</div>
