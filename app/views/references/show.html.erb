<div class="container">
  <%= render '/layouts/alerts' %>

  <h1>
    <strong>
     Reference for: <%= @reference.person.title %> <%= @reference.person.full_name %>
    </strong>
  </h1>

  <p>
    <strong>Full Name:</strong>
    <%= @reference.full_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @reference.email %>

  </p>

  <p>
    <strong>Mobile:</strong>
    <%= @reference.mobile %>

  </p>

  <p>
    <strong>Telephone:</strong>
    <%= @reference.telephone %>

  </p>

  <p>
    <strong>Organisation/Institute:</strong>
    <%= @reference.employer %>

  </p>

  <%= link_to 'Edit', edit_person_reference_path(@person, @reference), class: 'btn btn-primary' %> |
  <%= link_to 'Back', person_path(@person), class: 'btn btn-primary' %>
</div>