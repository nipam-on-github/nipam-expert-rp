<%= form_with(model: [@person, reference], local: true) do |form| %>
  <% if reference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reference.errors.count, "error") %> prohibited this reference from being saved:</h2>

      <ul>
      <% reference.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Required fields are followed by <abbr title="Required">*</abbr></p>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :full_name %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.text_field :full_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :email %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :mobile %> <br />
      <%= form.number_field :mobile, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :telephone %> <br />
      <%= form.number_field :telephone, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :employer %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.text_field :employer, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.hidden_field :person_id, :value => @person['id'], class: "form-control" %>
  </div>

  <hr />
  <br />

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %> <hr>
  </div>
<% end %>
