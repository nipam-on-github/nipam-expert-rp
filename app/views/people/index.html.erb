<p id="notice"><%= notice %></p>

<h1>People</h1>


<div class="container table-container">
  <div class="row">
    <div class="col-md-12">
      <table id="people-table" class="display">

        <thead>
          <tr>
            <th>Title</th>
            <th>First Names</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>ID Number/Passprt Number</th>
            <th>Citizenship</th>
            <th>Permit Holder</th>
            <th>Sector</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% 

          @people.each do |person| %>
            <tr>
              <td><%= person.title %></td>
              <td><%= person.first_name %></td>
              <td><%= person.last_name %></td>
              <td><%= person.dob %></td>
              <td><%= person.id_passport_number %></td>
              <td><%= person.citizenship %></td>
              <td><%= person.permit_type.empty? ? "N/A" : "Yes" %></td>
              <td><%= person.sector.nil? ? "N/A" : person.sector.sector_name %></td>
              <td><%= link_to 'Show', person %></td>
              <td><%= link_to 'Edit', edit_person_path(person) %></td>
            </tr>

          <% end %>
        </tbody>


      </table>
    </div>
  </div>
</div>

<br>

