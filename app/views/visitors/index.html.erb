<div class="container">
  <%= render '/layouts/alerts' %>
  <h1 style="text-align=center;">Visitors</h1>
  <br />

  <div class="row">
    <div class="col-md-6">

      <h3>Search for Visitor</h3>

      <table id="visitors-table" class="display">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @visitors.each do |visitor| %>
            <tr>
              <td><%= link_to visitor.name, visitor %></td>
              <td><%= link_to 'Add Visit', new_visitor_visit_path(visitor), class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      <div>
        <h3>Add new Visitor</h3>
        <%= render 'form', visitor: @visitor %>
      </div>
    </div>
  </div>
</div>