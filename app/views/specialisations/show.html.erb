<div class="container">
  <%= render '/layouts/alerts' %>
  
  <h1>
    <strong>
    Specialisation for: <%= @specialisation.person.title %> <%= @specialisation.person.first_name %> <%= @specialisation.person.last_name %>
    </strong>
  </h1>
  
  <p>
    <strong>Field of Specialisation:</strong>
    <%= @specialisation.field.field %>
  </p>
  
  <p>
    <strong>Level:</strong>
    <%= @specialisation.level %>
  </p>
  
  <p>
    <strong>Station Duty:</strong>
    <%= @specialisation.station_duty %>
  </p>
  
  <p>
    <strong>Category:</strong>
    <%= @specialisation.category.category %>
  </p>
  
  <%= link_to 'Edit', edit_person_specialisation_path(@person, @specialisation), class: 'btn btn-primary' %> |
  <%= link_to 'Back', person_path(@person), class: 'btn btn-primary' %>
</div>