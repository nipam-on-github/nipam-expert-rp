<%= form_with(model: employment_history, local: true) do |form| %>
  <% if employment_history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employment_history.errors.count, "error") %> prohibited this employment_history from being saved:</h2>

      <ul>
      <% employment_history.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br />
  <hr />

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :person_id %> <br />
      <%= form.select :person_id, Person.all.collect { |person| [person.full_name, person.id] }, prompt: 'Select Person...' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :employer %> <br />
      <%= form.text_field :employer, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :position_held %> <br />
      <%= form.text_field :position_held, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :date_from %> <br />
      <%= form.date_select :date_from, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :date_to %> <br />
      <%= form.date_select :date_to, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :key_performance_areas %> <br />
      <%= form.text_area :key_performance_areas, class: 'form-control' %>
    </div>
  </div>
  
  <hr />
  <br />

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
