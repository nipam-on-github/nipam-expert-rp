<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>Required fields are followed by <abbr title="Required">*</abbr></p>
  
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :email %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :role %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.select :role, @all_roles.collect { |role| [role,role]}, prompt: 'Select Role...',class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :password %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :password_confirmation %> <abbr title="Required" aria-label="required">*</abbr> <br />
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>  
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<hr />