<table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Postal Address</th>
        <th>Telephone Work</th>
        <th>Telephone Home</th>
        <th>Fax</th>
        <th>Mobile</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= contact.postal_address %></td>
          <td><%= contact.work_telephone %></td>
          <td><%= contact.home_telephone %></td>
          <td><%= contact.fax %></td>
          <td><%= contact.mobile %></td>
          <td><%= contact.email %></td>
          <td><%= link_to 'Edit', edit_person_contact_path(@person, contact) %></td>
          <td><%= link_to 'Remove', [@person, contact], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
</table>