<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br />
  <hr />

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :person_id %> <br />
      <%= form.select :person_id, Person.all.collect { |person| [person.full_name, person.id] }, prompt: 'Select Person...' %>
    </div>
    
    <div class="form-group col-md-6">
      <%= form.label :email %> <br />
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :postal_address %> <br />
      <%= form.text_area :postal_address, class: 'form-control'  %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :work_telephone %> <br />
      <%= form.number_field :work_telephone, class: "form-control" %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label :home_telephone %> <br />
      <%= form.number_field :home_telephone, class: "form-control" %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label :fax %> <br />
      <%= form.number_field :fax, class: "form-control" %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label :mobile %> <br />
      <%= form.number_field :mobile, class: "form-control" %>
    </div>
  </div>

  <hr />
  <br />

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
