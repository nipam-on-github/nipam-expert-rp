<div class="container">
  <%= render '/layouts/alerts' %>
  <h1>Skill and Competency Types</h1>

  <div class="row">
    <div class="col-md-12">
      <table id="static-table" class="display">

        <thead>
          <tr>
            <th>Skill Type</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @skill_types.each do |skill_type| %>
            <tr>
              <td><%= skill_type.type_name %></td>
              <td><%= link_to 'Edit', edit_skill_type_path(skill_type) %></td>
              <td><%= link_to 'Destroy', skill_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>

	
      </table>
    </div>
  </div>
  
  <br>

  <%= link_to 'New Skill Type', new_skill_type_path, class: 'btn btn-primary' %>

</div>
