<%= render '/layouts/header' %>

<div class="container">
  <%= render '/layouts/alerts' %>

  <h1>Registers</h1>
  <br />

  <div class="row">
    <div clas="col-md-12">
      <table id="people-table" class="display">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Number</th>
            <th>Date and Time</th>
            <th>Purpose</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @registers.each do |register| %>
            <tr>
              <td><%= register.name %></td>
              <td><%= register.last_name %></td>
              <td><%= register.number %></td>
              <td><%= register.time %></td>
              <td><%= register.purpose %></td>
              <td><%= link_to 'View', register %></td>
              <td><%= link_to 'Edit', edit_register_path(register) %></td>
              <td><%= link_to 'Delete', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>
  <%= link_to 'New Visit', new_path, class: 'btn btn-primary' %>

</div>

<%= render '/layouts/footer' %>
